<div class="container_home">

  <div class="banner_home">
    <h1>Welcome to Motourist</h1>
    <p>Feel like a star in a classic car!</p>
  </div>

  <div class="container_cards">

    <% @cars.each do |car|%>
      <div class="card_car">
        <div>Car_Image</div>
        <h2><%=car.year%> <%=car.model.capitalize%> <%=car.make%></h2>

        <%= link_to "View Details", car_path(car), { class: "btn btn-outline-primary" } %>
      </div>
    <% end %>

  </div>

</div>
