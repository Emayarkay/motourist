<div class="container_home">

  <div class="banner_home">
    <h1>Welcome to Motourist</h1>
    <p>Feel like a star in a classic car!</p>
  </div>
  <div class="container_index">
    <div class="container_cards">
      <% @cars.each do |car|%>
        <div class="card_car">
          <div class="card_image">
            <% if car.photo.attached? %>
              <%= cl_image_tag car.photo.key, height: 300, width: 400, crop: :fill, class: "index-card-image" %>
            <% else %>
              <%= image_tag "placeholder.png", height: 300, width: 400 %>
            <% end %>
          </div>
          <div class="card_car_details">
            <div>
              <h3> <%=car.make.titleize%> <%=car.model.titleize%> </h3>
            </div>
            <div>
              <h3><%=car.year%></h3>
            </div>
          </div>
          <%= link_to "View Details", car_path(car), { class: "btn btn-outline-primary" } %>
        </div>
      <% end %>
    </div>

    <div class="container_map">
      <div style="width: 100%; height: 100%;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    </div>

  </div>
<div class="footer"></div>
</div>
