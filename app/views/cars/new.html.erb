<div class="container">
  <h1 class="mt-3">Let A Vehicle</h1>
  <p>Making money from your timeless car has never been easier</p>

  <div class="form-group">
    <%= simple_form_for @car do |f| %>
      <%= f.input :make, label: 'Make', input_html: { class: "my-custom-input" }, label_html: { class: "my-custom-label" }, wrapper_html: { class: 'my-custom-wrapper' } %>
      <%= f.input :model, label: 'Model' %>
      <%= f.input :year, label: 'Year' %>
      <%= f.input :price, label: 'Price Per Day in Â£' %>
      <%= f.input :colour, label: 'Colour' %>
      <%= f.input :description, label: 'Tell us a bit about your car' %>

      <%= f.input :location,
      input_html: {data: {location_autocomplete_target: "location"}, class: 'd-none'},
      wrapper_html: {data: {controller: "location-autocomplete", location_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}
       %>

      <%= f.input :capacity, label: 'No. of Seats', collection: (1..6).to_a.append("7+"), prompt: "Select capacity" %>
      <%= f.input :photo, as: :file %>
      <%= f.submit value: 'Add my listing', class: "btn btn-primary mt-2" %>
    <% end %>
  </div>
  <div class="mt-3 mb-3">
  <%= link_to "Return To Listings", cars_path %>
  </div>
</div>
