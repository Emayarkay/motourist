<div class="container d-flex justify-content-center align-items-center vh-100"> <!-- Centering the container -->
  <div class="card custom-card"> <!-- Adding a custom class for the card -->
    <div class="card-body">
      <h2 class="card-title text-center">Log in</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
        <div class="form-group">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: 'form-control' } %>
        </div>
        <div class="form-group">
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class: 'form-control' } %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="form-group text-right"> <!-- Aligning the "Remember me" checkbox to the right -->
            <%= f.input :remember_me, as: :boolean %>
          </div>
        <% end %>
        <div class="form-group text-center"> <!-- Centering the submit button -->
          <%= f.button :submit, "Log in", class: 'btn btn-primary' %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
