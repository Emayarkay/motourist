<div class="container-lg d-flex justify-content-center align-items-center vh-100"> <!-- Widened container using container-lg -->
  <div class="card custom-card shadow-lg p-4 w-100 h-80">
    <div class="card-body">
      <h2 class="card-title text-center mb-4">Log in</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
        <div class="form-group mb-3">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: 'form-control' } %>
        </div>
        <div class="form-group mb-3">
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class: 'form-control' } %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="form-check mb-3">
            <%= f.input :remember_me, as: :boolean, label: "Remember me", label_class: "form-check-label" %>
          </div>
        <% end %>
        <div class="form-group text-center">
          <%= f.button :submit, "Log in", class: 'btn btn-primary px-5' %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
