<!-- signup.html.erb -->

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Sign Up</title>
  <!-- Bootstrap CSS -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <!-- Optional custom styles -->
</head>

<body>

  <div class="container signup-container">
    <h2>Sign Up</h2>
    <%= form_with(url: '/signup', method: 'post', id: 'signupForm') do |form| %>
      <div class="form-group">
        <%= form.label :username, 'Username:' %>
        <%= form.text_field :username, class: 'form-control', placeholder: 'Enter new username' %>
      </div>
      <div class="form-group">
        <%= form.label :password, 'Password:' %>
        <%= form.password_field :password, class: 'form-control', placeholder: 'Enter new password' %>
      </div>
      <%= form.submit 'Sign Up', class: 'btn btn-primary' %>
    <% end %>
  </div>


</body>

</html>
