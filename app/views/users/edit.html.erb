<h1>Edit Profile</h1>
<%= button_to 'Delete Profile', user_path(@user), method: :delete, data: { confirm: 'Are you sure you want to delete your profile?' } %>
<%= form_for @user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <!-- Other fields for additional attributes -->

  <%= f.submit 'Update Profile' %>
<% end %>
