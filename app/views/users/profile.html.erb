<div class="container_profile user_profile_background_image p-6">
  <div>
    <h1><%= current_user.first_name %>'s Profile Page</h1>

  </div>

    <div class="container_profile_cars">

      <div class="card_cars_offered">
        <h3>My Listings</h3>
        <div class="d-flex p-2 justify-content-between align-items-center">
          <% current_user.cars.each do |car| %>
            <h5><%= car.model %></h5>
            <% if @user_owner == true %>
            <div>
              <%= link_to "🚗", car_path(car), class: "text-decoration-none" %>
              <%= link_to "✍️", edit_car_path(car), class: "text-decoration-none" %>
              <%= link_to "❌", car_path(car), class: "text-decoration-none", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this listing?" } %>
            </div>
            <% end %>
          <% end %>
        </div>
      </div>

    <div class="card_cars_rented">
      <h3>My Bookings</h3>
      <div class="d-flex p-2 justify-content-between align-items-center">
        <% current_user.bookings.each do |booking| %>
        <h5><%= booking.car.model %></h5>
        <div>
          <%= link_to "🚗", car_path(booking.car), class: "text-decoration-none" %>
          <%= link_to "🔍", booking_path(booking), class: "text-decoration-none"%>
          <%= link_to "❌", booking_path(booking), class: "text-decoration-none", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this booking?" } %>
        </div>
        <% end %>
    </div>
    </div>
</div>
</div>
