<div class="container_profile">
 <div class="banner_user_profile d-flex align-items-center justify-content-around">
  <div class="d-flex justify-content-center">
    <%= image_tag "https://kitt.lewagon.com/placeholder/users/robbiebullough", class: "avatar-user-profile"%>
  </div>
  <div>
    <h1 class="profile-page-title"><%= current_user.first_name %>'s Garage</h1>
  </div>
 </div>


    <div class="container_profile_cars p-6">

      <div class="card_cars_offered">
        <h3>My Listings</h3>
        <div class="d-flex p-2 justify-content-between align-items-center">
          <% current_user.cars.each do |car| %>
            <h5><%= link_to car.model, car_path(car), class: "text-decoration-none" %></h5>
            <% if @user_owner == true %>
            <div>
              <%= link_to edit_car_path(car), class: "text-decoration-none" do %>
               <i class="fa-solid fa-pen-to-square"></i>
              <% end %>

               <%= link_to car_path(car), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this listing?" } do %>
               <i class="fa-solid fa-trash"></i>
              <% end %>

            </div>
            <% end %>
          <% end %>
        </div>
      </div>


    <div class="card_cars_rented">
      <h3>My Bookings</h3>
      <div class="d-flex p-2 justify-content-between align-items-center">
        <% current_user.bookings.each do |booking| %>
        <h5><%= link_to booking.car.model, car_path(booking.car), class: "text-decoration-none" %></h5>
        <div>
          <%= link_to booking_path(booking), class: "text-decoration-none" do %>
           <i class="fa-solid fa-eye"></i>
          <% end %>

          <%= link_to booking_path(booking), class: "text-decoration-none", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this booking?" } do %>
            <i class="fa-solid fa-trash"></i>
          <% end %>
        </div>
        <% end %>
    </div>
    </div>
</div>
</div>
